<h1>This is page is to create a new article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p>
        <%= f.label :title %></br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :desc %></br>
        <%= f.text_area :desc %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
